{
    "version": "1.0.0",
    "hook": {
        "path": "@INSTALL_PATH@/bin/ssh_hook",
        "env": [
            "HOOK_BASE_DIR=@HOOK_BASE_DIR@",
            "PASSWD_FILE=@INSTALL_PATH@/etc/passwd",
            "DROPBEAR_DIR=@INSTALL_PATH@/dropbear",
            "SERVER_PORT=15263"
        ],
        "args": [
            "ssh_hook",
            "start-ssh-daemon"
        ]
    },
    "when": {
        "annotations": {
            "^com.hooks.ssh.enabled$": "^true$"
        }
    },
    "stages": ["prestart"]
}
