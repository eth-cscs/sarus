{
    "version": "1.0.0",
    "hook": {
        "path": "@INSTALL_PATH@/bin/slurm_global_sync_hook",
        "env": [
            "HOOK_BASE_DIR=@HOOK_BASE_DIR@",
            "PASSWD_FILE=@INSTALL_PATH@/etc/passwd"
        ]
    },
    "when": {
        "annotations": {
            "^com.hooks.slurm-global-sync.enabled$": "^true$"
        }
    },
    "stages": ["prestart"]
}
